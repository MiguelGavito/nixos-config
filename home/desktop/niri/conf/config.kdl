
// Input configuration
input {
    keyboard {
        xkb {
            layout "us,es,jp"
            options "grp:alt_shift_toggle"
        }
    }
    touchpad {
        tap
        natural-scroll
    }
}

// Output configuration (monitor)
output "eDP-1" {
    mode "1920x1080@60"
}

// Layout configuration
layout {
    gaps 8
    center-focused-column "never"
    
    default-column-width { proportion 0.5; }
    
    focus-ring {
        width 2
        active-color 129 161 193 255
        inactive-color 76 86 106 255
    }
}

// Atajos de teclado básicos
binds {
    // Aplicaciones
    Mod+Return { spawn "kitty"; }
    // Mod+Space { spawn "wofi" "--show" "drun" "--style" "~/.config/wofi/style.css" "--gtk-dark"; }
    Mod+Space { spawn "fuzzel"; }

    // Window management
    Mod+Q { close-window; }
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    Mod+J { focus-window-down; }
    Mod+K { focus-window-up; }
    Mod+F { fullscreen-window; }

    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    Mod+Shift+J { move-window-down; }
    Mod+Shift+K { move-window-up; }
    
    // Workspaces
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
       /*  
    // Workspaces - Numpad directional navigation (no cursor movement)
    Mod+KP_Up { focus-workspace 0; }         // Numpad 8: Previous workspace
    Mod+KP_Down { focus-workspace 1; }       // Numpad 2: Next workspace
    Mod+KP_Left { focus-column-left; }       // Numpad 4: Scroll/focus left
    Mod+KP_Right { focus-column-right; }     // Numpad 6: Scroll/focus right
    
    // Move windows with Mod+Shift+Numpad directional
    Mod+Shift+KP_Left { move-column-left; }     // Mod+Shift+Numpad 4: Move window left
    Mod+Shift+KP_Right { move-column-right; }   // Mod+Shift+Numpad 6: Move window right
     */



    // Column width management
    Mod+W { toggle-column-tabbed-display; }          // Tabbed layout for column
    Mod+R { switch-preset-column-width; }            // Cycle preset column widths
    Mod+Shift+R { switch-preset-column-width-back; } // Reverse cycle (optional)
    Mod+Equal { set-column-width "+5%"; }            // Increase width
    Mod+Minus { set-column-width "-5%"; }            // Decrease width

    // Floating windows
    Mod+V { toggle-window-floating; }                // Float ↔ Tile
    Mod+Shift+V { switch-focus-between-floating-and-tiling; } // Focus between layouts

    // Workspace cycling
    Alt+Page_Up   { focus-workspace-up; }
    Alt+Page_Down { focus-workspace-down; }

    // Move window to adjacent workspace
    Mod+Alt+J { move-window-down-or-to-workspace-down; }
    Mod+Alt+K { move-window-up-or-to-workspace-up; }

    // Help and system
    Mod+Shift+Slash { show-hotkey-overlay; }         // Show hotkey overlay
    
    // Sistema
    Mod+Shift+E { quit; }
    Mod+Shift+R { spawn "systemctl" "--user" "restart" "niri"; }
    
    // Screenshots (use shell for pipe)
    Print { spawn "sh" "-c" "grim -g \"$(slurp)\" - | wl-copy"; }
    Mod+Shift+S { spawn "sh" "-c" "mkdir -p ~/Pictures/Screenshots && grim -g \"$(slurp)\" ~/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d-%H-%M-%S).png"; }
    
    // Lock screen
    Mod+Escape { spawn "swaylock"; }

    // Brightness
    XF86MonBrightnessUp { spawn "brightnessctl" "set" "+5%"; }
    XF86MonBrightnessDown { spawn "brightnessctl" "set" "5%-"; }

    // Volume
    XF86AudioRaiseVolume { spawn "pamixer" "-i" "5"; }
    XF86AudioLowerVolume { spawn "pamixer" "-d" "5"; }
    XF86AudioMute { spawn "pamixer" "-t"; }
    XF86AudioMicMute { spawn "sh" "-c" "pactl set-source-mute @DEFAULT_SOURCE@ toggle"; }

    // Media
    XF86AudioPlay { spawn "playerctl" "play-pause"; }
    XF86AudioNext { spawn "playerctl" "next"; }
    XF86AudioPrev { spawn "playerctl" "previous"; }
}

// Decorations
prefer-no-csd

// Screenshot path
screenshot-path "~/Pictures/Screenshots/screenshot-%Y-%m-%d-%H-%M-%S.png"

// Animations (minimal para performance)
animations {
    slowdown 1.0
}

