{
    "layer": "top",
    "position": "top",
    "margin-top": 5,
    "margin-bottom": 5,

    "modules-left": [
        "niri/workspaces" 
        // "niri/mode"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "privacy",
        "power-profiles-daemon",
        "niri/language",
        "keyboard-state",
        "network",
        "pulseaudio",
        "battery"
    ],
    "sway/window": {
        "max-length": 50
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "format-alt": "{:%A, %B %d, %Y (%R)} ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "month",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "tz_up",
                    "on-scroll-down": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "alsa_output.pci-0000_00_1f.3.analog-stereo": "Óå≠",
            "alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "Óª®Óå≠",
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "phone-muted": "Ó¥ó",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"]
    },
    "network": {
        "interface": "wlp4s0",
        "format": "{ifname}",
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Û∞äó",
        "format-disconnected": "", //An empty format will hide the module.
        "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },
    "niri/window": {
	      "format": "{}",
	      "rewrite": {
		        "(.*) - Mozilla Firefox": "üåé $1",
		        "(.*) - zsh": "> [$1]"
	      }
    },
    "niri/workspaces": {
      "format": "{icon}",
      "format-icons": {
        // Named workspaces
        // (you need to configure them in niri)
        "browser": "ÓÄá",
        "discord": "Ôéí",
        "chat": "<b>ÔÅµ</b>",

        // Icons by state
        "active": "ÔÜí",
        "default": "ÔÑë"
      }
    },
    "niri/language": {
      "format": "{long}"
      // "format-en": "AMERICA, HELL YEAH!",
      // "format-tr": "As bayraklarƒ±"
    },

    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "privacy": {
      "icon-spacing": 4,
      "icon-size": 18,
      "transition-duration": 250,
      "modules": [
        {
          "type": "screenshare",
          "tooltip": true,
          "tooltip-icon-size": 24
        },
        {
          "type": "audio-out",
          "tooltip": true,
          "tooltip-icon-size": 24
        },
        {
          "type": "audio-in",
          "tooltip": true,
          "tooltip-icon-size": 24
        }
      ],
      "ignore-monitor": true,
      "ignore": [
        {
          "type": "audio-in",
          "name": "cava"
        },
        {
          "type": "screenshare",
          "name": "obs"
        }
      ]
    },
    "backlight/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal",
        "device": "intel_backlight"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    }

}


